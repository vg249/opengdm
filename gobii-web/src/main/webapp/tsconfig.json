{
  "compilerOptions": {
    "target": "es6",
    "module": "system",
    "outDir": "app/js/",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "typeRoots": [
       "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "target"
  ],
  "lib": [
    "es6"
  ]
}
